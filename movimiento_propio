#include "pch.h"
#include <iostream>
#include "conio.h"

#define ABAJO 115
#define ARRIBA 119
#define IZQUIERDA 97
#define DERECHA 100

using namespace System;
using namespace std;

void ventana() {
	Console::SetWindowSize(80, 40);	//definir tama√±o de ventana
	Console::CursorVisible = false;
}

void gotoxi(int x, int y) {	//ir a una posicion
	Console::SetCursorPosition(x, y);
}

void dibujar(int x, int y) {	//dibujar UPC
	gotoxi(x, y); cout << "'-O---O--'";
}

void borrar(int x, int y) {	//borrar UPC
	gotoxi(x, y); cout << "          ";
}

int main()
{
	ventana(); int posx = 35, posy = 20;
	while (true)
	{
		borrar(posx, posy);
		if (_kbhit())
		{
			char k; k = _getch();
			if (k==ARRIBA)
			{
				posy-=2;
			}
			if (k==ABAJO)
			{
				posy+=2;
			}
			if (k==IZQUIERDA)
			{
				posx-=2;
			}
			if (k==DERECHA)
			{
				posx++;
			}
		}
		dibujar(posx, posy);
		_sleep(51);
	}
}
